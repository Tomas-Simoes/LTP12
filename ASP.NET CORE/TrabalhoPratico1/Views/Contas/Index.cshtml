@model IEnumerable<TrabalhoPratico1.Models.Conta>

@{
    ViewData["Title"] = "Contas";
}

<br />

<h1>Contas</h1>

<br />

<p>
    <a class="btn btn-dark" asp-action="Create"> Create new </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agencias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agencias.Morada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clientes.ClienteNome)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ContaId"       class="btn btn-dark"> <i class="bi bi-pencil-square"></i>   </a>
                    <a asp-action="Details" asp-route-id="@item.ContaId"    class="btn btn-dark"> <i class="bi bi-three-dots"></i>      </a>
                    <a asp-action="Delete" asp-route-id="@item.ContaId"     class="btn btn-dark"> <i class="bi bi-trash"></i>           </a>
        </tr>
}
    </tbody>
</table>
