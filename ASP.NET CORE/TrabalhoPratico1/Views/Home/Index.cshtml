@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Agência Bancária Simões</h1>
    <p>The best bank in the world</p>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/bank_img_1.jpg" alt="First slide">

                <div class="carousel-caption d-none d-md-block">
                    <h5> The best customer support </h5>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/bank_img_2.jpg" alt="Second slide">

                <div class="carousel-caption d-none d-md-block">
                    <h5> The saffest </h5>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/bank_img_3.jpg" alt="Third slide">
            </div>

            <div class="carousel-caption d-none d-md-block">
                <h5> Agência Bancaria Simões </h5>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
</div>
