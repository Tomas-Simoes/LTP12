@model IEnumerable<AppFicha9.Models.Cliente>
@{
    Layout = "_Layout";
    ViewData["Subtitle"] = "Lista de Clientes";
}

<div class="row">
    <div class="col-6">
        <h2 class="Titulo">@ViewBag.Subtitle</h2>
    </div>
    <div class="col-6 text_right">
        <a asp-controller="Home"
           asp-action="adicionarCliente"
           class="btn btn-primary">
            Adicionar Clientes
        </a>
    </div>
</div>

@if (Model.Count() == 0)
{
    <p>Não existem clientes registados!</p>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Telefone</td>
                    <td class="text_right">
                        <a asp-controller="Home"
                   asp-action="editarCliente"
                   asp-route-id="@item.Id"
                   class="btn btn-primary">

                            <i class="bi bi-pencil">Editar</i>
                        </a>

                        <a asp-controller="Home"
                   asp-action="eliminarCliente"
                   asp-route-id="@item.Id"
                   class="btn btn-primary">

                            <i class="bi bi-trash">Eliminar</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        Total: <b>@Model.Count()</b>
    </p>
}

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

