@model AppFicha9.Models.Cliente
@{
    Layout = "_Layout";

    ViewData["Subtitle"] = "Editar Cliente";
}

<h2 class="titulo">@ViewBag.Subtitle</h2>

<hr />

<div class="card bg-light p-5">
    <form asp-controller="Home" asp-action="editarCliente">
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            @Html.TextBoxFor(model => model.Nome)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefone)
            <br />
            @Html.TextBoxFor(model => model.Telefone)
        </div>

        <br />

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancelar</a>
        <button class="btn btn-primary">Guardar</button>
    </form>
</div>
