@{
    ViewData["Title"] = "Projeto Completo ASP.NET Core MVC";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/css/fontawesome.min.css" rel="stylesheet"/>
    <link href="~/css/site.css"/>
</head>
<body class="bg-dark text-white">
    <div class="container-fluid bg-dark text-white pt-3 pb-3">
        <h2>@ViewBag.Title</h2>
    </div>
    
    <div class="container-fluid bg-white text-dark pt-3 pb-3">
        <div class="container mt-5 mb-5">
            @RenderBody()
        </div>
    </div>

    <div class="container-fluid bg-dark text-white pt-3 pb-3 text-center">
        ASP.NET Core &copy; @DateTime.Now.Year
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>
